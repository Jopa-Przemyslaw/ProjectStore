@model ProjectStore.Models.ViewsModels.Collection.CollectionDetailsVM

@{
    ViewBag.Title = "Details Page";
}

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Id):</dt>
        <dd>@Html.DisplayFor(model => model.Id)</dd>

        <dt>@Html.DisplayNameFor(model => model.Title):</dt>
        <dd>@Html.DisplayFor(model => model.Title)</dd>

        <dt>
            @Html.DisplayNameFor(model => model.Author)
            /
            @Html.DisplayNameFor(model => model.Director):
        </dt>
        <dd>
            @if (Model.Author != null)
            {
                @Html.DisplayFor(model => model.Author)
            }
            else
            {
                @Html.DisplayFor(model => model.Director)
            }
        </dd>

        <dt>@Html.DisplayNameFor(model => model.DateReleased):</dt>
        <dd>@Html.DisplayFor(model => model.DateReleased)</dd>

        <dt>@Html.DisplayNameFor(model => model.Type):</dt>
        <dd>@Html.DisplayFor(model => model.Type)</dd>

        <dt>@Html.DisplayNameFor(model => model.Price):</dt>
        <dd>@Html.DisplayFor(model => model.Price)</dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit1", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Collection")
</p>
