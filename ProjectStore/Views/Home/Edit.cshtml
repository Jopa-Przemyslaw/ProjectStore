@model ProjectStore.Models.ViewsModels.Home.UserEditVM

@{
    ViewBag.Title = "Edit";
}

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

@using (Html.BeginForm())
{
