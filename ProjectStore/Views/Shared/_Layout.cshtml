<!DOCTYPE html>
<html>
<head>
    @*<link href="~/Content/_LayoutStyle.css" rel="stylesheet" type="text/css"/>*@
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height">
    <title>Bookstore - @ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/_LayoutStyle.css")
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    <div class="navbar navbar-fixed-top navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">BOOK&MOVIEstore</a>
            </div>
            <div class="navbar">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Collection", "Collection", "Collection")</li>
                    <li>@Html.ActionLink("About Us", "About", "Home")</li>
                    <li>@Html.ActionLink("Our Stores", "Contact", "Home")</li>
                    @{ if (Request.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Customers", "Customers", "Home")</li>
                        }
                    }
                </ul>
                <form class="navbar-form navbar-left" action="/action_page.php">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                </form>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("Cart","Collection")"><span class="glyphicon glyphicon-shopping-cart"></span>Shopping Cart</a></li>
                    @{
                        if (Request.IsAuthenticated)
                        {
                            <li><a href="@Url.Action("Logout","User")"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                            @*<li>@Html.ActionLink("Logout", "Logout", "Authentication", FormMethod.Post, new { id = "logoutForm" })</li>*@
                        }
                        else
                        {
                            <li><a href="@Url.Action("Register","User")"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                            <li><a href="@Url.Action("Login","User")"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="pull-right">BOOKstore &reg;&copy; - @DateTime.Now.Date.ToLongDateString()</div>
        </footer>
        <div class="row">
            <div class="col-md-12">
                @{
                    if (Request.IsAuthenticated)
                    {
                        <p>Logged as: @User.Identity.Name</p>
                    }
                    else
                    {
                        <p>Logged as: not authenticated</p>
                    }
                }

            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

































